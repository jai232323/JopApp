<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal" android:background="@color/red" android:layout_margin="20dp" android:layout_height="wrap_content">
    <TextView android:text="Field Name" android:id="@+id/questionTxt" android:layout_width="0dp" android:layout_weight="3" android:textSize="20dp" android:gravity="center" android:padding="10dp" android:textColor="@color/black" android:layout_height="wrap_content"/>
    <Spinner android:visibility="visible" android:id="@+id/fieldNameSpinner" android:layout_width="0dp" android:layout_weight="4" android:layout_height="wrap_content" android:layout_gravity="center" android:spinnerMode="dialog"/>
    <Button android:id="@+id/quickADD" android:text="+" android:layout_width="0dp" android:layout_height="wrap_content" android:background="@color/green" android:textColor="@color/white" android:layout_weight="0.5"/>
</LinearLayout>